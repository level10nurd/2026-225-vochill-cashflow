# VoChill Data Pipeline - Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# SHOPIFY API CONFIGURATION
# ============================================================================
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token_here
SHOPIFY_SHOP_URL=your-shop.myshopify.com
SHOPIFY_API_VERSION=2026-01
SHOPIFY_RATE_LIMIT_REQUESTS=40
SHOPIFY_RATE_LIMIT_WINDOW=60
SHOPIFY_PAGE_SIZE=250
SHOPIFY_MAX_RETRIES=3
SHOPIFY_BACKOFF_FACTOR=1.5

# ============================================================================
# GOOGLE CLOUD / BIGQUERY CONFIGURATION
# ============================================================================
GCP_PROJECT_ID=vochill
GCP_CREDENTIALS_PATH=/path/to/service-account-key.json
BIGQUERY_DATASET=revrec
BIGQUERY_LOCATION=US

# ============================================================================
# TRIPLE WHALE CONFIGURATION
# ============================================================================
TRIPLEWHALE_DATA_DIR=./data
TRIPLEWHALE_API_KEY=
TRIPLEWHALE_API_URL=https://api.triplewhale.com/api/v2
TRIPLEWHALE_SHOP_DOMAIN=vo-vin.myshopify.com

# ============================================================================
# INFOPLUS CONFIGURATION (Phase 2)
# ============================================================================
INFOPLUS_API_KEY=
INFOPLUS_DOMAIN=https://vochill.infopluswms.com/
INFOPLUS_API_URL=https://api.infoplus.com/v3.0

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/pipeline.log

# ============================================================================
# PIPELINE CONFIGURATION
# ============================================================================
DRY_RUN=false
VALIDATE_ONLY=false
BATCH_SIZE=1000


